EAPI=3
PYTHON_DEPEND="2"

inherit distutils

DESCRIPTION="Blik Cloud boot manager"
HOMEPAGE=""
SRC_URI="ftp://blik_mirror/distfiles/${PF}.tar"

LICENSE="GPL-3"
SLOT="0"
KEYWORDS="amd64 x86"
IUSE=""

DEPEND="dev-python/setuptools
        net-misc/dhcp
		net-dns/bind
		sys-cluster/glusterfs"
RDEPEND="${DEPEND}"


src_compile() {
	distutils_src_compile
}

src_install() {
	distutils_src_install
    
    insinto /etc/dhcp
    newins config/dhcpd.conf dhcpd.conf

    insinto /etc/bind
    newins config/named.conf named.conf

    insinto /etc/bind/pri
    newins config/blik.zone blik.zone
    newins config/192.168.87.zone 192.168.87.zone
}

pkg_postinst() {
	python /usr/bin/configureBootManager.py || die
}
