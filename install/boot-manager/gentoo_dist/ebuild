EAPI=3
PYTHON_DEPEND="2"

inherit distutils

DESCRIPTION="Blik Cloud boot manager"
HOMEPAGE=""
SRC_URI="ftp://blik_products/distfiles/${P}.tar"

LICENSE="GPL-3"
SLOT="0"
KEYWORDS="amd64 x86"
IUSE=""

DEPEND="net-misc/dhcp
		net-dns/bind
		sys-cluster/glusterfs"
RDEPEND="${DEPEND}"


src_compile() {
	distutils_src_compile
}

src_install() {
	distutils_src_install
}

pkg_postinst() {
	python /opt/blik/bin/configureBootManager.py
}
