EAPI=3
PYTHON_DEPEND="2"

inherit distutils

DESCRIPTION="Node Agent for BlikCloud management system"
HOMEPAGE=""
SRC_URI="ftp://blik-mirror/distfiles/${PF}.tar"

LICENSE="GPL-3"
SLOT="0"
KEYWORDS="amd64 x86"
IUSE=""

DEPEND="blik-products/blik-utils
        sys-apps/dmidecode"

RDEPEND="${DEPEND}"

src_compile() {
	distutils_src_compile
}


src_install() {
	distutils_src_install

    newinitd init_scripts/node_agent node_agent

}

pkg_postinst() {
    rc-update add node_agent default
	
    /etc/init.d/node_agent start
}
